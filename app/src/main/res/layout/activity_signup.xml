<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".signupActivity"
    android:background="@drawable/main_background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="200sp"
        >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/splash_sword" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/splash_sword" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:background="@drawable/sword"/>


        <EditText
            android:id="@+id/email"
            android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emailOverlapCheckBtn"
            android:background="@drawable/button_design"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_gravity="right"
            android:text="이메일 확인"
            android:textColor="@color/black"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:background="@drawable/sword" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40sp"

            android:background="@drawable/edittext"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>


    <TextView
        android:id="@+id/passwordResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textStyle="bold"/>
"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:background="@drawable/sword"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext"></EditText>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/usernameOverlapCheckBtn"
            android:background="@drawable/button_design"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_weight="0"
            android:text="닉네임 확인"
            android:textColor="@color/black"
            android:textSize="8sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:background="@drawable/button_design"
        android:text="확인"
        android:textColor="@color/black" />

</LinearLayout>